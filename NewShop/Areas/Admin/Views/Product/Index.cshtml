
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Script{
    <script src="~/Assets/admin/js/homeController/homeController.js"></script>
    }
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Blank page
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="box">
                <div class="box-header">
                    <button id="btnAddNew" class="btn btn-success">Thêm mới</button>
                </div>
                <input style="width:400px" type="text" class="form-control" id="txtNameS" placeholder="Type name" />

                <select class="form-control" id="ddlStatusS">
                    <option value="">All</option>
                    <option value="true">Active</option>
                    <option value="false">Locked</option>
                </select>
                <button class="btn btn-primary" id="btnSearch">Search</button>
                <button class="btn btn-default" id="btnReset">Reset</button>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Salary</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                    <div id="pagination" class="pagination">

                    </div>
                    <script id="data-template" type="x-tmpl-mustache">
                        <tr>
                            <td>{{ID}}</td>
                            <td>{{Name}}</td>
                            <td><input type="number" class="txtSalary" data-id="{{ID}}" value="{{Price}}" /></td>
                            <td>{{{Status}}}</td>
                            <td>
                                <button class="btn btn-primary btn-edit" data-id="{{ID}}">Edit</button>
                                <button class="btn btn-danger btn-delete" data-id="{{ID}}">Delete</button>
                            </td>
                        </tr>
                    </script>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal" &times;></button>
                <h4 class="modal-title">Add/Update Product</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="txtName">Name:</label>
                        <input type="text" class="form-control" id="txtName">
                        <input type="hidden" id="hidID" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="txtCode">Code:</label>
                        <input type="text" class="form-control" id="txtCode">
                    </div>
                    <div class="form-group">
                        <label for="txtMetaTitle">MetaTitle:</label>
                        <input type="text" class="form-control" id="txtMetaTitle">
                    </div>
                    <div class="form-group">
                        <label for="txtDescription">Descripton:</label>
                        <input type="text" class="form-control" id="txtDescription">
                    </div>
                    <div class="form-group">
                        <label for="txtImage">Image:</label>
                        <input type="text" class="form-control" id="txtImage">
                        <button type="button" id="btnSelectImage">Chọn ảnh</button>
                    </div>
                    <div class="form-group">
                        <label for="txtMoreImages">MoreImages:</label>
                        <input type="text" class="form-control" id="txtMoreImages">
                    </div>
                    <div class="form-group">
                        <label for="txtPrice">Price:</label>
                        <input type="text" class="form-control" id="txtPrice">
                    </div>
                    <div class="form-group">
                        <label for="txtPromotionPrice">PromotionPrice:</label>
                        <input type="text" class="form-control" id="txtPromotionPrice">
                    </div>
                    <div class="form-group">
                        <label for="txtCategoryID">CategoryID:</label>
                        <input type="text" class="form-control" id="txtCategoryID">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" id="ckStatus">Active</label>
                    </div>
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dissmiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

